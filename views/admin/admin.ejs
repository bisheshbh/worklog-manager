<%- include('../headers') -%>

<nav class="navbar navbar-expand-md fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="#">Worklog Manager Admin Portal</a>
    <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/admin">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/users">Users</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/worklogs">Worklogs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/logout">Logout</a>
        </li>
       
      </ul>
    </div>
  </nav>

  <main role="main" class="container">
    <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
      <div class="lh-100">
        <h6 class="mb-0 text-white lh-100"></h6>
        <small></small>
      </div>
    </div>
    <br>
    <br>
    

    <div class="my-3 p-3 bg-white rounded box-shadow">
      <h6 class="border-bottom border-gray pb-2 mb-0">All updates</h6>
      <% if(typeof tasks != 'undefined') { %>
        <% tasks.forEach(function(task) { %>
          <div class="media text-muted pt-3">
            <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
              <div class="d-flex justify-content-between align-items-center w-100">
                  <strong class="d-block text-gray-dark"><%= task.created_date %></strong>
              </div>
              <h4 class="d-block"> <%= task.task_description %></h4>
            </div>
           </div>
           <% }) %>
        <small class="d-block text-right mt-3">
          <a href="/admin/worklogs">All updates</a>
        </small>
    <% } %>
     
      
    </div>

    <div class="my-3 p-3 bg-white rounded box-shadow">
      <h6 class="border-bottom border-gray pb-2 mb-0">Feedbacks</h6>
      <% if(typeof feedbacks != 'undefined') { %>
        <% feedbacks.forEach(function(feedback) { %>
          <div class="media text-muted pt-3">
            <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
              <div class="d-flex justify-content-between align-items-center w-100">
                  <h4 class="d-block text-gray-dark"><%= feedback.comment %></h4>
                  <a href="#"><%= feedback.created_date %></a>
              </div>
              <span class="d-block"> <%= feedback.task_description %></span>
            </div>
           </div>
           <% }) %>
        
        <% } %>
    </div>
  </main>
  <%- include('../footers') -%>
