    <form action="/worklogs/update/<%=task.id%>" method="POST">
    <div class="form-group">
      <label for="task_description">Task description</label>
      <textarea type="text" name="task_description" class="form-control" id="task_description" placeholder="task_description" ><%=task.task_description%></textarea>
    </div>
    <div class="form-group">
      <label for="created_date">Date</label>
      <input readonly type="text" class="form-control" id="created_date" name="created_date" value="<%=task.created_date%>">
    </div>
    <input hidden type="number" class="form-check-input" name="user_id" id="user_id" value="<%=userId%>">
      
    
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
