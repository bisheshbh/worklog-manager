<%- include('../headers') -%>
  <body class="bg-light">

    <nav class="navbar navbar-expand-md fixed-top navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Worklog Manager</a>
      <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/worklogs/main">Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/worklogs/create">Add update</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/worklogs/allupdates">Worklogs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/profile">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/settings">Settings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/logout">Logout</a>
          </li>
         
        </ul>
      </div>
    </nav>

    

    <main role="main" class="container">
      <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
        <div class="lh-100">
          <h6 class="mb-0 text-white lh-100"></h6>
          <small></small>
        </div>
      </div>
      <br>
      <br>


    <% if(typeof info != 'undefined') { %>
      <div class="alert alert-success" role="alert">
          <%= info %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
<% } %>
      

      <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0">Feedbacks</h6>
        <% if(typeof feedbacks != 'undefined') { %>
          <% feedbacks.forEach(function(feedback) { %>
            <div class="media text-muted pt-3">
              <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <h4 class="d-block text-gray-dark"><%= feedback.comment %></h4>
                    <a href="#"><%= feedback.created_date %></a>
                </div>
                <span class="d-block"> <%= feedback.task_description %></span>
              </div>
            </div>
            <% }) %>
          <small class="d-block text-right mt-3">
           
          </small>
          <% } %>
      </div>

      <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0">Recent updates</h6>
        <% if(typeof tasks != 'undefined') { %>
          <% tasks.forEach(function(task) { %>
            <div class="media text-muted pt-3">
              <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                <h4 class="d-block"> <%= task.task_description %></h4>
                <span class="d-block"> <%= task.created_date %></span>
              </div>
            </div>
          <% }) %>
          <small class="d-block text-right mt-3">
            <a href="/worklogs/allupdates">All updates</a>
          </small>
      <% } else {%>
        <div class="media text-muted pt-3">
          <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <div class="d-flex justify-content-between align-items-center w-100">
                <strong class="d-block text-gray-dark"></strong>
                <a href="#"></a>
            </div>
            <span class="d-block">No tasks</span>
          </div>
         </div>
        <% } %>
       </div>
      </main>


    <%- include('../footers') -%>
